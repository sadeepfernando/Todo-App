<%- include("partials/_header") %>
    <div class="table-container">
        <h2 class="todo-title">Todo List</h2>
    </div>

    <div>
        <a href="/add-todo" class="btn">Add Todo</a>
    </div>

    <br/>

    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Action</th>

        </tr>

        <tr>
            <% for(let i = 0; i < todo.length; i++){ %>
            <th><%= todo[i].title %></th>
            <th><%= todo[i].desc %></th>
            <th><%= todo[i].createdAt %></th>
            <th><%= todo[i].updatedAt %></th>
            <th>
                <a href="/update-todo" class="btn">Edit</a>
                <a href="/delete-todo" class="btn">Delete</a>
            </th>

        </tr>
        <% } %>
    </table>
<%- include("partials/_footer") %>


