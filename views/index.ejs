<%- include("partials/_header") %>
    <div class="table-container">
        <h2 class="todo-title">Todo List</h2>
    </div>

    <div>
        <a href="/add-todo" class="btn">Add Todo</a>
    </div>

    <br/>

    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Created at</th>
            <th>Updated at</th>
            <th>Action</th>

        </tr>

        <tr>
            <% for(let i = 0; i < todo.length; i++){ %>
            <td><%= todo[i].title %></td>
            <td><%= todo[i].desc %></td>
            <td><%= moment(todo[i].createdAt).format("MMM DD, YYYY, HH:mm:ss") %></td>
            <td><%= moment(todo[i].updatedAt).format("MMM DD, YYYY, HH:mm:ss") %></td>
            <td>
                <a  class="btn" href="/update-todo?id=<%= todo[i]._id %>">Edit</a>
                <a class="btn" href="/delete-todo?id=<%=todo[i]._id %>" >Delete</a>
            </td>

        </tr>
        <% } %>
    </table>
<%- include("partials/_footer") %>


